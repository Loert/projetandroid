<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.puydufoubatoto.FicheRestaurant"
    android:background="@drawable/parchemin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nom du restaurant"
        android:id="@+id/nomRestaurant"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="70px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description du restaurant"
        android:id="@+id/descriptionRestaurant"
        android:layout_below="@+id/nomRestaurant"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp"
        android:textSize="50px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Notez ce restaurant"
        android:id="@+id/textView3"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/descriptionRestaurant"
        android:layout_centerHorizontal="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BarreNoteRestaurant"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:numStars="5"
        android:stepSize="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enregistrer"
        android:id="@+id/BoutonEnregistreNoteRestaurant"
        android:layout_below="@+id/BarreNoteRestaurant"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listeMenu"
        android:layout_below="@+id/BoutonEnregistreNoteRestaurant"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
