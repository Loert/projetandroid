<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.puydufoubatoto.Home"
    android:background="@drawable/bghome">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="150px"
        android:id="@+id/BoutonVoirPlan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:background="@drawable/boutonplan"
        android:layout_toStartOf="@+id/BoutonVoirServices"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/BoutonVoirServices"
        android:layout_toLeftOf="@+id/BoutonVoirServices" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="200px"
        android:text="Spectacles a venir"
        android:id="@+id/BoutonSpectacleVenir"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:id="@+id/BoutonListeSpectacles"
        android:background="@drawable/boutonspectacle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/BoutonPlanning"
        android:layout_alignBottom="@+id/BoutonSpectacleVenir"
        android:layout_toLeftOf="@+id/BoutonPlanning" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/BoutonVoirServices"
        android:background="@drawable/boutonservice"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/BoutonListeSpectacles"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/BoutonSpectacleVenir"
        android:layout_toRightOf="@+id/BoutonListeSpectacles"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="planning"
        android:id="@+id/BoutonPlanning"
        android:layout_below="@+id/BoutonOptimiseTemp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planning Optimise Temporaire"
        android:id="@+id/BoutonOptimiseTemp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
