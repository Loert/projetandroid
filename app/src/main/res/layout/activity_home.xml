<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.puydufoubatoto.Home"
    android:background="@drawable/wallpaper"
    >

    <Button
        android:layout_width="fill_parent"
        android:layout_height="150px"
        android:id="@+id/BoutonVoirPlan"
        android:text="PLAN"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:layout_alignTop="@+id/BoutonListeSpectacles"
        android:layout_alignBottom="@+id/BoutonPlanning"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp"
        android:layout_toLeftOf="@+id/BoutonPlanning"
        android:layout_toRightOf="@+id/BoutonListeSpectacles"
        android:layout_toEndOf="@+id/BoutonListeSpectacles" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:id="@+id/BoutonListeSpectacles"
        android:text="SPECTACLE"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/BoutonVoirServices"
        android:text="RESTAURANT"
        android:layout_alignTop="@+id/BoutonOptimiseTemp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="129dp"
        android:layout_marginEnd="129dp"
        android:layout_above="@+id/BoutonListeSpectacles"
        android:layout_alignRight="@+id/BoutonVoirPlan"
        android:layout_alignEnd="@+id/BoutonVoirPlan"
        android:layout_marginBottom="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="planning"
        android:id="@+id/BoutonPlanning"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="121dp"
        android:layout_alignTop="@+id/BoutonOptimiseTemp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planning Optimise Temporaire"
        android:id="@+id/BoutonOptimiseTemp"
        android:layout_marginBottom="46dp"
        android:layout_above="@+id/BoutonListeSpectacles"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/BoutonPlanning"
        android:layout_alignStart="@+id/BoutonPlanning" />

</RelativeLayout>
